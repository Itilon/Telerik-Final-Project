<section id="content-wrapper">
    <div id="heading">
        <h5>
            <a href="#/home">Home</a>
            <span class="raquo">Â»</span>
            {{this.[0].title}}
        </h5>
    </div>
    <div id="article-page-container" class="container">
        <div class="row">
            <div class="col-sm-8">
                <p class="meta">Posted by {{this.[0].author}} on {{this.[0].date}} in {{this.[0].category}} | {{this.[0].numberOfComments}} Comments</p>
                {{#each this.[0].content}}
                <p>{{this}}</p>
                {{/each}}
                <h3 class="comment-title">{{this.[0].numberOfComments}} Comments</h3>
                <div id="comment-container" class="container-fluid">
                    {{#each this.[0].comments}}
                    <div class="comment row">
                        <div class="avatar-container col-sm-2">
                            <div class="avatar-box">
                                <img class="avatar" src="../../images/avatar.png" alt="Avatar Image">
                            </div>
                            <span class="comment-date">{{this.date}}</span>
                        </div>
                        <div class="comment-content col-sm-10">
                            <h5>{{this.author}} says:</h5>
                            <p>{{this.content}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <h3 class="comment-title">Leave a Comment</h3>
            </div>
            <div class="col-sm-4">
